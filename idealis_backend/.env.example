# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=*

# Database Configuration (uncomment when you add database)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=idealis_db
# DB_USER=postgres
# DB_PASSWORD=your_database_password

# JWT Configuration (uncomment when you add authentication)
# JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production
# JWT_EXPIRES_IN=24h

# API Keys (add your API keys here)
# EXAMPLE_API_KEY=your-api-key-here
# OPENAI_API_KEY=your-openai-api-key
# STRIPE_SECRET_KEY=your-stripe-secret-key

# Email Configuration (uncomment when you add email service)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-email-password

# Redis Configuration (uncomment when you add Redis)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-password

# Other configurations
LOG_LEVEL=info